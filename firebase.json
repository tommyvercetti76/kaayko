{
  "hosting": {
    "site": "kaaykostore",
    "public": "src",
    "cleanUrls": true,    
    "trailingSlash": false,
    "ignore": [
      "firebase.json",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/apple-app-site-association",
        "headers": [{ "key": "Content-Type", "value": "application/json" }]
      },
      {
        "source": "/.well-known/apple-app-site-association",
        "headers": [{ "key": "Content-Type", "value": "application/json" }]
      },
      {
        "source": "/assets/**",
        "headers": [{
          "key": "Cache-Control",
          "value": "public,max-age=31536000,immutable"
        }]
      }
    ]
  }
}